<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@color/FloralWhite"
    android:weightSum="2"
    tools:context="me.joshuayuan.a163.PlayActivity">

    <Button
        android:id="@+id/speed_mode_button"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/speed_mode"
        android:textSize="@dimen/regular_text_size"
        android:fontFamily="OpenSans-Regular"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:width="300dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"/>
    <Button
        android:id="@+id/practice_mode_button"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/practice_mode"
        android:textSize="@dimen/regular_text_size"
        android:fontFamily="OpenSans-Regular"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:width="300dp"
        android:background="@drawable/rounded_button"/>

</LinearLayout>
